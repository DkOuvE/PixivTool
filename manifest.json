{
    "name": "Pixiv Tool",
    "version": "1.0.0",
    "manifest_version": 2,
    "author": "Harry Cheng",
    "content_scripts": [
        {
            "matches": [
                "http://www.pixiv.net/mypage.php",
                "http://www.pixiv.net/bookmark_new_illust.php*",
                "http://www.pixiv.net/search.php*",
                "http://www.pixiv.net/bookmark.php*",
                "http://www.pixiv.net/bookmark_add.php*",
                "http://www.pixiv.net/member_illust.php*"
            ],
            "css": [],
            "js": [
                "build/deps.js",
                "build/content.bundle.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
      "scripts": ["build/deps.js","build/event.bundle.js"]
    },
    "permissions": [
        "storage",
        "downloads",
        "webRequest",
        "webRequestBlocking",
        "https://public-api.secure.pixiv.net/",
        "http://*.pixiv.net/*"
    ],
    "default_locale": "en",
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
